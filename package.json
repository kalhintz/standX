{
  "name": "standx-bot",
  "version": "1.0.0",
  "description": "STANDX Trading Bot GUI",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --trace-warnings",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["standx", "trading", "bot"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "@noble/curves": "^1.2.0",
    "@scure/base": "^1.1.3",
    "ethers": "^6.9.0",
    "ini": "^4.1.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.standx.tradingbot",
    "productName": "STANDX Trading Bot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.git",
      "!dist"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
